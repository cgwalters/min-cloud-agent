libexec_PROGRAMS += initial-setup-accounts

initial_setup_accounts_SOURCES = \
	src/initial-setup-accounts.c \
	$(NULL)
initial_setup_accounts_CFLAGS = $(BUILDDEP_LIBGSYSTEM_CFLAGS) -I$(srcdir)/src
initial_setup_accounts_LDADD = $(BUILDDEP_LIBGSYSTEM_LIBS)

if HAVE_SYSTEMD
systemdservice_DATA     += min-metadata.service
initial-setup-accounts.service: src/initial-setup-accounts.service.in Makefile
	$(AM_V_GEN) sed -e "s|\@libexecdir\@|$(libexecdir)|" $< > $@.tmp && mv $@.tmp $@
endif
